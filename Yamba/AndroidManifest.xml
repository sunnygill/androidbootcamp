<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marakana.android.yamba"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="com.marakana.yamba.content.POLL" />
    <uses-permission android:name="com.marakana.yamba.content.PERM_READ" />
    <uses-permission android:name="com.marakana.yamba.content.PERM_WRITE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_yamba"
        android:label="@string/yamba"
        android:theme="@style/AppTheme" >

        <!-- android:uiOptions="splitActionBarWhenNarrow" -->

        <activity
            android:name=".TimelineActivity"
            android:label="@string/yamba" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StatusActivity"
            android:label="@string/yamba" >
        </activity>
        <activity
            android:name=".TimelineDetailActivity"
            android:label="@string/yamba" >
        </activity>
    </application>

</manifest>