<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="yamba_base" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>
 
    <style name="yamba_base_bold" parent="yamba_base">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="yamba_medium_bold" parent="yamba_base_bold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="yamba_large_bold" parent="yamba_medium_bold">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="base_window" parent="AppBaseTheme">
        <item name="android:background">@drawable/bg</item>
    </style>

</resources>